[user]
	name = conao3
	email = conao3@gmail.com
	signingkey = 81903F6B7B02852F
[color]
	ui = auto
[core]
	editor = "emacsclient -t" --alternate-editor emacs
        ignorecase = false
	quotepath = false
	precomposeunicode = true
	pager = /usr/local/share/git-core/contrib/diff-highlight/diff-highlight | less -r
	commentchar = ";"
[push]
	default = simple
[help]
	autocorrect = -1
[alias]
        # `git git status` etc.
        git = !git

        # short commands
        st = status
        cm = commit

        br = branch
        co = checkout

        cp = cherry-pick

        # show list comamnds
        tags = tag
        remotes = remote -v
        branches = branch -a
        stashes = stash list

        # complex comamnds
        alias = config --get-regexp alias.*
        revoke = reset --soft HEAD^
        files = !cd ${GIT_PREFIX:-.} && git ls-tree -z --name-only HEAD | xargs -0 -n1 -I@ -- git log -1 --pretty=format:'%C(green)%ai%Creset %C(yellow)%h%Creset @ %C(blue)(%ar)%Creset %C(red)<%an>%Creset' -- @
        prune-merged-branch = !git branch --merged | grep -vE '\\*|develop|master' | xargs git branch -d
[commit]
	# gpgsign = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
